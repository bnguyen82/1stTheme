<div class="col-sm-{{ blog_item_width }}">
  <article class="post">
    <h3 class="entry-title"><a href="{{ article.url }}">{{ article.title }}</a></h3>
    <div class="entry-meta">
      <span class="date">
        <i class="fa fa-calendar"></i> <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: '%b %d, %Y' }}</time>
      </span>
      <span class="author"><i class="fa fa-user"></i>Bởi {{ article.author }}</span>
      {% if blog.comments_enabled? %}
      <span class="comments"><i class="fa fa-comment"></i><a href="{{ article.url }}#comments">{{ article.comments_count }} {{ article.comments_count | pluralize: 'bình luận', 'bình luận' }}</a></span>
      {% endif %}
    </div>
    <div class="post-thumb">
      {% if article.excerpt.size > 0 %}
        <a href="{{ article.url }}">{{ article.excerpt }}</a>
      {% endif %}
    </div>
    <div class="entry-content rte">
      <p>{{ article.content | strip_html | truncatewords: 30 }}</p>
    </div>
    <div class="post-more">
      <a href="{{ article.url }}" class="btn btn-primary">Xem thêm</a>
    </div>
  </article>
</div>