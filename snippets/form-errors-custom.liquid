{% if form.errors %}
  <div class="alert alert-danger" role="alert">
    <p>Xin lỗi, đã có lỗi xảy ra. Vui lòng nhập và thử lại:</p>

    <ul>
      {% for field in form.errors %}

        {% comment %}
          Check if it's a generic 'form' error and don't show the {{ field }}
        {% endcomment %}

        {% if field == 'form' %}
          <li>
            {{ form.errors.messages[field] }}
          </li>
        {% else %}
          <li>
            Phần <strong>{{ field | replace: 'body', 'Message' }}</strong> có lỗi {{ form.errors.messages[field] }}
          </li>
        {% endif %}

      {% endfor %}
     </ul>
  </div>
{% endif %}