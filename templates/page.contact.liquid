<section id="content">
  <div class="container">
    
    {% include 'breadcrumb' %}
    
    <h1>{{ page.title }}</h1>
    
    <div class="gap-20"></div>
    
    {% if settings.show_google_map %}
    {% include 'google-map' %}
    {% endif %}
    
    <div class="row">
      <div class="col-sm-6">
        {% form 'contact' %}
        {% if form.posted_successfully? %}
        <div class="alert alert-success">
          Cám ơn bạn đã liên hệ! Chúng tôi sẽ trả lời ngay khi có thể
        </div>
        {% endif %}
        
        {% include 'form-errors-custom' %}
        
        <div class="form-group">
          <label for="contactFormName" class="sr-only">Tên</label>
          <input type="text" id="contactFormName" class="form-control input-lg" name="contact[name]" placeholder="Tên" autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
        </div>
        <div class="form-group">
          <label for="contactFormEmail" class="sr-only">Email</label>
          <input type="email" name="contact[email]" placeholder="Email" id="contactFormEmail" class="form-control input-lg" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
        </div>
        <div class="form-group">
          <label for="contactFormPhone" class="sr-only">Điện thoại</label>
          <input type="tel" name="contact[phone]" id="contactFormPhone" class="form-control input-lg" placeholder="Điện thoại" pattern="[0-9]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}">
        </div>
        <div class="form-group">
          <label for="contactFormMessage" class="sr-only">Nội dung</label>
          <textarea rows="10" name="contact[body]" class="form-control input-lg" placeholder="Nội dung" id="contactFormMessage">{% if form.body %}{{ form.body }}{% endif %}</textarea>
        </div>
        <input type="submit" class="btn btn-primary btn-lg" value="Gửi" />
        
        {% endform %}
        
        <div class="gap-30"></div>
        
      </div>
      <div class="col-sm-6">
        
        {{ page.content }}
        
      </div>
    </div>
    
  </div>
</section>