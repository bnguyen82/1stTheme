{% layout settings.customer_layout %}

<section id="content">
  <div class="container">
    {% include 'breadcrumb' %}
    <div class="row">
      <div class="col-sm-12">
        <h1>Kích hoạt tài khoản</h1>
      </div>
    </div>
    <div class="row mt20">
      <div class="col-sm-6 col-sm-offset-3">
        <p>Điền mật khẩu để kích hoạt tài khoản của bạn</p>
        
        {% form 'activate_customer_password' %}
        
        {% include 'form-errors-custom' %}
        
        <div class="form-group">
          <label for="customer_password">Mật khẩu</label>
          <input type="password" value="" name="customer[password]" id="customer_password" class="form-control">
        </div>
        
        <div class="form-group">
          <label for="customer_password_confirmation">Nhập lại mật khẩu</label>
          <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="form-control">
        </div>
        
        <p><input type="submit" class="btn btn-primary btn-lg" value="Kích hoạt">
          hoặc <input type="submit" class="btn btn-link" name="decline" id="customer_decline" value="Từ chối"></p>
        {% endform %}
      </div>
    </div>
  </div>
</section>