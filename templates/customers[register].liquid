{% layout settings.customer_layout %}

<section id="content">
  <div class="container">
    {% include 'breadcrumb' %}
    <div class="row">
      <div class="col-sm-12">
        <h1>Tạo tài khoản</h1>
      </div>
    </div>
    <div class="row mt20">
      <div class="col-sm-6 col-sm-offset-3">
        {% form 'create_customer' %}

        {% include 'form-errors-custom' %}

        <div class="form-group">
          <label for="last_name" class="sr-only">Họ</label>
          <input type="text" value="" name="customer[last_name]" id="last_name" class="form-control" placeholder="Họ" {% if form.errors contains "last_name" %} class="error"{% endif %} autocapitalize="words">
        </div>  
        <div class="form-group">
          <label for="first_name" class="sr-only">Tên</label>
          <input type="text" value="" name="customer[first_name]" id="first_name" class="form-control" placeholder="Tên" {% if form.errors contains "first_name" %} class="error"{% endif %} autocapitalize="words" autofocus>
        </div>
        <div class="form-group">
          <label for="email" class="sr-only">Email</label>
          <input type="email" value="" name="customer[email]" id="email" class="form-control" placeholder="Email" {% if form.errors contains "email" %} class="error"{% endif %} autocorrect="off" autocapitalize="off">
        </div>
        <div class="form-group">
          <label for="password" class="sr-only">Mật khẩu</label>
          <input type="password" value="" name="customer[password]" id="create_password" class="form-control" placeholder="Mật khẩu" {% if form.errors contains "password" %} class="error"{% endif %}>
        </div>
        
        <div class="row mt20">
          <div class="col-sm-6"><p><input type="submit" class="btn btn-primary btn-lg" value="Đăng ký"></p></div>
          <div class="col-sm-6 text-right mt10">Đã có tài khoản? <a href="/account/login">Đăng nhập &rarr;</a></div>
        </div>
        {% endform %}

      </div>
    </div>
  </div>
</section>